<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_account_move_line_form_slm">
            <field name="name">view.account.move.line.form.slm</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="More Information">
                        <group>
                            <group>
                                <field name="pnr" optional="hide" />
                                <field name="faktnr" optional="hide" />
                                <field name="omschr" optional="hide"/>
                                <field name="controlle" optional="hide"/>
                            </group>
                            <group>
                                <field name="bedrsrd" optional="hide"/>
                                <field name="bedrusd" optional="hide"/>
                                <field name="opercde" optional="hide"/>
                                <field name="regnr" optional="hide"/>
                                <field name="vlnr" attrs="{'required': [('required_flight_number', '=', True)]}"/>
                                <field name="required_flight_number" invisible="1"/>
                                <field name="required_analytic_account" invisible="1"/>
                            </group>
                            <group>
                                <field name="gallon"/>
                                <field name="plcde"/>
                                <field name="handl"/>
                                <field name="maalt"/>
                            </group>
                            <group>
                                <field name="pax"/>
                                <field name="mandgn"/>
                                <field name="sdatum"/>
                                <field name="kstnpl6"/>
                            </group>
                            <group>
                                <field name="kstnpl7"/>
                                <field name="persnr" string="SEATS"/>
                                <field name="ponr" string="CARGO KG"/>
                                <field name="galprijs"/>
                            </group>
                            <group>
                                <field name="betrekdg"/>
                                <field name="betrekmd"/>
                                <field name="betrekjr"/>
                                <field name="factdg"/>
                            </group>
                            <group>
                                <field name="factmd"/>
                                <field name="factjr"/>
                                <field name="vltype"/>
                                <field name="vltreg"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                <xpath expr='//field[@name="analytic_account_id"]' position="replace">
                    <field name="analytic_account_id" attrs="{'required': [('required_analytic_account', '=', True)]}"/>
                </xpath>
            </field>
        </record>

        <record id="view_account_move_line_tree_slm" model="ir.ui.view">
            <field name="name">view.account.move.line.tree.slm</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'required': [('move_type', '!=', 'entry')]}</attribute>
                </xpath>
                <xpath expr='//field[@name="account_internal_group"]' position="after">
                    <field name="pnr" optional="hide"/>
                    <field name="faktnr" optional="hide"/>
                    <field name="omschr" optional="hide"/>
                    <field name="controlle" optional="hide"/>
                    <field name="bedrsrd" optional="hide"/>
                    <field name="bedrusd" optional="hide"/>
                    <field name="opercde" optional="hide"/>
                    <field name="regnr" optional="hide"/>
                    <field name="vlnr" optional="hide" attrs="{'required': [('required_flight_number', '=', True)]}"/>
                    <field name="gallon" optional="hide"/>
                    <field name="plcde" optional="hide"/>
                    <field name="handl" optional="hide"/>
                    <field name="maalt" optional="hide"/>
                    <field name="pax" optional="hide"/>
                    <field name="mandgn" optional="hide"/>
                    <field name="sdatum" optional="hide"/>
                    <field name="kstnpl6" optional="hide"/>
                    <field name="kstnpl7" optional="hide"/>
                    <field name="persnr" optional="hide" string="SEATS"/>
                    <field name="ponr" optional="hide" string="CARGO KG"/>
                    <field name="galprijs" optional="hide"/>
                    <field name="betrekdg" optional="hide"/>
                    <field name="betrekmd" optional="hide"/>
                    <field name="betrekjr" optional="hide"/>
                    <field name="factdg" optional="hide"/>
                    <field name="factmd" optional="hide"/>
                    <field name="factjr" optional="hide"/>
                    <field name="vltype" optional="hide"/>
                    <field name="vltreg" optional="hide"/>
                    <field name="required_flight_number" invisible="1"/>
                    <field name="required_analytic_account" invisible="1"/>
                </xpath>
                <xpath expr='//field[@name="analytic_account_id"]' position="replace">
                    <field name="analytic_account_id" attrs="{'required': [('required_analytic_account', '=', True)]}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
